import mongoose from "mongoose";


const doctersSchema = new mongoose.Schema({
    name:{
        type:String,
        requred:true
    },
    salary:{
        type:Number,
        requred:true
    },
    qualification:{
        type:String,
        requred:true
    },
    experienceInYears:{
        type:Number,
        default:0
    },
    worksInHospitals:[
        {
            type:mongoose.Schema.Types.ObjectId,
            ref:"Hospital"
        }
    ]

},{timestamps:true})

export const Docter = mongoose.model("Docter",doctersSchema)
